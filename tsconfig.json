{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "target": "ESNext",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*", ".storybook/**/*"],
}
